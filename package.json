{
  "name": "ts-react-parcel",
  "version": "1.3.1",
  "description": "Typescript with React, using parcel bundler",
  "repository": {
    "type": "git",
    "url": "https://github.com/emaren84/ts-react-parcel"
  },
  "main": "index.js",
  "scripts": {
    "develop": "parcel ./src/index.html",
    "build": "parcel build ./src/index.html --public-url '/'",
    "prettify": "prettier --write './src/**/*.{ts,tsx}'",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettify && npm run test"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/config/test-preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/*.(test|spec).(ts|tsx|js)"
    ]
  },
  "keywords": [
    "Typescript",
    "React",
    "Parcel"
  ],
  "author": "Ahn Dohyung",
  "license": "MIT",
  "dependencies": {
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-hot-loader": "^4.3.3"
  },
  "devDependencies": {
    "@types/jest": "^23.1.0",
    "@types/react": "^16.3.18",
    "@types/react-dom": "^16.0.6",
    "husky": "^1.0.0-rc.9",
    "jest": "^23.1.0",
    "parcel-bundler": "^1.9.1",
    "parcel-plugin-typescript": "^1.0.0",
    "prettier": "^1.13.5",
    "react-test-renderer": "^16.4.1",
    "react-testing-library": "^3.1.7",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "tslint-config-airbnb": "^5.9.2",
    "tslint-config-prettier": "^1.13.0",
    "tslint-react": "^3.6.0",
    "typescript": "^2.9.2"
  }
}
